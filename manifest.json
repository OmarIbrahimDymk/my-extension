{
  "manifest_version": 2,
  "name": "Ads Hater",
  "version": "1.0.0",
  "description": "Hello Ads hater!",
  "short_name": "Ads Hater",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["background.css"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_title": "Hello Ads Hater",
    "default_popup": "popup.html"
  }
}
